# -------------------------- main ---------------------------

* Parameters

tb0 = 1.e1
tb1 = 1.e2 #1e11
ntb = 1000
iout = 1
rtol = 1.e-11
nmax = 1000

A0 = -1
s = -1
r_ism = -1
r_ej = -1
n_ism = 0.001
d_l = 3.0857e+26
z = 0.001
theta_obs = 0.785 # 45.

* Settings

lc_freqs = array 3.e9
lc_times = array logspace 1.e4 1.e8 150
lc_use_freq_to_time = no

skymap_freqs = array 1e9 1e18
skymap_times = array logspace 8.e5 2e9 50

integrator = DOP853E
method_eats = piece-wise # piece-wise

# --------------------------- END ---------------------------
#
# ------------------------ Magnetar -------------------------

* Parameters

* Settings

run_magnetar = no
load_magnetar = yes
save_magnetar = no

fname_magnetar_evol = magnetar_evol.h5
fname_mag = magnetar.h5

# --------------------------- END ---------------------------
