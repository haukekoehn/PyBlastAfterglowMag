# --------------------------- PWN ---------------------------

* Parameters

eps_e = 0.1
eps_mag = 0.1
eps_th = 0.1
gamma_b = 1.0e5
albd_fac = 0.5
Rw0 = 120000000. # 100*12*1000*100
iters = 1000
nthreads_frac = 14

save_pwn_every_it = 1

* Settings

run_pwn = yes
save_pwn = yes
fname_pwn = pwn.h5

