# ---------------------- GRB afterglow ----------------------

* Parameters

n_store_substeps = 10

tprompt = 1.e3
a = 1.0
fraction_of_Gamma0_when_spread = 0.1
im_max_theta = 1.57

eps_e = 0.1
eps_b = 0.01
eps_t = 0.
p = 2.4
ksi_n = 1.

eps_e_rs = 0.01
eps_b_rs = 0.001
eps_t_rs = 0.
p_rs = 2.1
ksi_n_rs = 1.

freq1 = 1.e9 # spectrum
freq2 = 1.e22
nfreq = 200

save_dyn_every_it = 10
rtol_adapt = 1e-5
fnu_min_frac = 1e-5

rs_Gamma0_frac_no_exceed = .92
min_Gamma0_for_rs = 0.

* Settings

run_bws = yes
save_dynamics = yes
load_dynamics = no
do_ele = no
do_spec = no
save_spec = no
do_lc = no
do_skymap = no

do_rs = yes
rhs_type = grb_fsrs
