# -------------------------- main ---------------------------

* Parameters

tb0 = 3335.64
tb1 = 7.03823e+17 # 318568. # 7.03823e+17
ntb = 1000
iout = 1
rtol = 1.e-6
nmax = 1000

A0 = -1
s = -1
r_ej = -1
r_ism = -1
n_ism = 1e-2
d_l = 3.09e26
z = 0.028
theta_obs = 0

* Settings

do_average_solution = no

lc_freqs = array 1e9 1e18
lc_times = array logspace 1.e4 1.e10 100
lc_use_freq_to_time = no

skymap_freqs = array 1e9 1e18
skymap_times = array logspace 8.e5 2e9 50

integrator = DOP853E

